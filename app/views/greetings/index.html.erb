<input id='menu' type='checkbox' />
<label for='menu' class='open' >
  <div class='start-screen'>aa</div>
</label>
  
<div class='main-contents'>
  <% photos = @photos%>
  <% photos.each_with_index do |photo , n| %>
  <div class='at-container'>
    <div class='at-item ani-option<%="#{n}"%>'>
      <%=  image_tag photo.urls.thumb ,class: "size-option#{n}", style: 'opacity: unset;' %> 
    </div>
  </div>
  <% end %>
</div>